		<script>
			$("#newTbcStore").load("/product/productList.do", {
				"categoryNum" : '0',
				"page" : '0',
				"size" : '12',
				"SORT" : "1"
			}, function(response, status, xhr) {
				if (status == "error") {
					alert("상품을 불러오지 못했습니다.");
					return;
				}
			});

			//스크롤 더보기
			var currentscrollHeight = 0;
			$(window)
					.on(
							'scroll',
							function() {
								const scrollHeight = $(document).height();
								const scrollPos = Math.floor($("body").height()
										+ $(window).scrollTop());
								const isBottom = scrollHeight - 200 < scrollPos;
								if (isBottom
										&& currentscrollHeight < scrollHeight) {
									var startNum = $(".product_item").length;
									var pageNum = $(".product_list.list_type_4").length;
									if (startNum % 12 == 0) {
										$("#ziploading").show();
										newStoreProductByScroll(pageNum,
												startNum);
									}

									currentscrollHeight = scrollHeight;
								}
							});

			function newStoreProductByScroll(pageNum, startNum) {
				$.ajax({
					type : "POST",
					url : '/product/productList.do',
					data : {
						"categoryNum" : '0',
						"page" : pageNum,
						"size" : '12',
						"SORT" : "1"
					},
					dataType : 'html',
					success : function(datas) {
						$("#newTbcStore").append(datas);
						$("#ziploading").hide();
					},
					error : function(e) {
						console.log(e);
					}
				});
			}
		</script>
